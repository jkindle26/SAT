@model IEnumerable<SAT.DATA.Enrollment>

@{
    ViewBag.Title = "Enrollments";
}

<h2>@ViewBag.Title</h2>

@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduledClass.InstructorName)
        </th>
        <th>Course</th>
        <th>
            Student Name
            @*@Html.DisplayNameFor(model => model.Student.FirstName)*@
        </th>
        <th>Location</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScheduledClass.InstructorName)
            </td>
            <td>
               @item.ScheduledClass.Course.CourseName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FullName)
            </td>
            <td>
                @item.ScheduledClass.Location
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentsId }) |
                @Html.ActionLink("Details", "Details", new { id = item.EnrollmentsId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentsId })
            </td>
        </tr>
    }

</table>
